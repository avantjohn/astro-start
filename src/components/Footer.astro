---
import Logo from "./Logo.astro";
const today = new Date();
---

<footer>
	<div class="footer-content">
		<Logo color="var(--u-color-text-primary)" />
		<div class="footer-copyright u-font-style-label-sm">&copy; {today.getFullYear()} Popmelt. All rights reserved.</div>
	</div>
</footer>
<style>
	footer {
		width: 100%;
		padding: 2rem 4rem;
		border-top: 1px solid var(--u-color-core-00-800);
		opacity: 0.5;
		margin-top: 4rem;
	}

	.footer-content {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
	}
</style>

